<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="account_move_form_view_inherit_eci_custom" model="ir.ui.view">
        <field name="name">account.move.view.inherit.eci.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Customer Note" name="Customer note">
                    <field name="customer_note" placeholder="Customer Note"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
